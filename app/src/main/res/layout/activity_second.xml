<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rexzen.maps.second"
    android:background="@drawable/greybg">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="13dp"
            android:background="#d2ee7e">

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@android:drawable/star_big_on"
                android:layout_below="@+id/editText2"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="35dp"
                android:id="@+id/floatingActionButton" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText2"
                android:background="#ffe8f8"
                android:hint="type here"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:paddingLeft="5dp"
                android:layout_below="@+id/textView3"
                android:layout_alignStart="@+id/editText" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText"
                android:background="#ffe8f8"
                android:hint="type here"
                android:paddingLeft="8dp"
                android:layout_marginLeft="8dp"
                android:layout_below="@+id/textView5"
                android:layout_alignStart="@+id/textView3"
                android:layout_marginTop="20dp" />

            <TextView
                android:text="Enter vehicle registration number:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/editText"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Enter vehicle details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:id="@+id/textView"
                android:layout_alignBottom="@+id/floatingActionButton"
                android:layout_alignStart="@+id/editText" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/detailsbox"
                android:layout_below="@+id/textView"
                android:layout_alignStart="@+id/editText2"
                android:background="#ffe8f8" />

            <TextView
                android:text="Enter your device ID:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:elevation="24dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/next"
        android:id="@+id/done"
        android:backgroundTint="@color/cast_expanded_controller_progress_text_color"
        android:elevation="9dp"
        android:background="#0fff4141"
        android:layout_marginBottom="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
